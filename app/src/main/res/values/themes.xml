<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HAM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/roxo</item>
        <item name="colorPrimaryVariant">@color/roxo_escuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.HAM.Dialog.Transparent" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- Tema personalizado para o TimePicker -->
    <style name="TimePickerDialogCustom" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">#7A40FF</item> <!-- Fundo roxo -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Números brancos -->
        <item name="android:buttonStyle">@style/TimePickerButton</item> <!-- Botão customizado -->
    </style>



    <!-- Estilo customizado para o seletor de DATA -->
    <style name="AppTheme.Dialog.Picker" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Cor de fundo principal do diálogo -->
        <item name="android:background">@color/roxo_escuro</item>
        <item name="android:windowBackground">@drawable/rounded_escuro</item>

        <!-- Cor dos textos principais (títulos, ano selecionado) -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Cor dos textos secundários (dias da semana) -->
        <item name="android:textColorSecondary">#CCCCCC</item>
        <!-- Cor de destaque (círculo do dia selecionado, botões) -->
        <item name="colorAccent">@color/roxo</item>
        <item name="colorControlActivated">@color/roxo</item>

        <!-- Estilo dos botões "OK" e "Cancelar" -->
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Dialog.Button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Dialog.Button</item>
    </style>

    <!-- TEMA customizado e completo para o seletor de HORA -->
    <style name="AppTheme.TimePickerDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorSurface">@color/roxo_escuro</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorPrimary">@color/roxo</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/roxo</item>
        <item name="android:textColor">@color/roxo</item>
        <!-- Cor dos números não selecionados no mostrador -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- Estilo para os botões dentro do diálogo -->
    <style name="AppTheme.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/roxo</item>
    </style>

    <!-- Estilo do botão de confirmação -->
    <style name="TimePickerButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#7A40FF</item> <!-- Texto roxo -->
        <item name="backgroundTint">#FFFFFF</item> <!-- Fundo branco -->
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Cor branca para o texto -->
    </style>

    <style name="Theme.MyApplication.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MyApplication.AppWidgetContainer" parent="Theme.MyApplication.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
        <!-- cronometro-->
    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/roxo</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/preto_escuro</item>
    </style>

</resources>