<resources>

    <style name="Widget.MyApplication.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MyApplication.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DayToggle" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/toggle_day_selector</item>
        <item name="android:textColor">@color/toggle_day_text_color</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <!-- Estilo para DiÃ¡logos com Fundo Transparente -->
    <style name="Theme.HAM.Dialog.Transparent" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>