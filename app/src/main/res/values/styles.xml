<resources>

    <style name="Widget.MyApplication.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MyApplication.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DayToggle" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/toggle_day_selector</item>
        <item name="android:textColor">@color/toggle_day_text_color</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>