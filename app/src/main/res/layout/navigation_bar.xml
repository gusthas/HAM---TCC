<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="6">

    <LinearLayout
        android:id="@+id/botao_inicio"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botao_anotacoes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notes"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anotações"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botao_habitos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_habits"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hábitos"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botao_treinos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_training"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treinos"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botao_cronometro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_timer"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cronômetro"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botao_configuracoes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:tint="#DDFFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:textColor="#DDFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>