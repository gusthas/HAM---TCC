<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_escuro">

    <TextView
        android:id="@+id/titulo_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione um bloco"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:id="@+id/bt_financas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Finanças"
            android:background="@drawable/rounded_button_white"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/bt_estudos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Estudos"
            android:background="@drawable/rounded_button_white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/bt_metas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Metas"
            android:background="@drawable/rounded_button_white"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/bt_trabalho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Trabalho"
            android:background="@drawable/rounded_button_white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/bt_saude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Saúde"
            android:background="@drawable/rounded_button_white" />

    </GridLayout>

</LinearLayout>
