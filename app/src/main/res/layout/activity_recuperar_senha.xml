<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/chatgpt_image_22_de_abr__de_2025_14_02_10"
    tools:context=".RecuperarSenhaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_app"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recuperar Senha"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:id="@+id/layoutEtapaEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite seu e-mail"
                    android:textColorHint="#80000000"
                    app:boxBackgroundColor="#B3FFFFFF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmailRecuperar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnVerificarEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verificar E-mail"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEtapaPergunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textViewPerguntaSecreta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    tools:text="Qual o nome do seu primeiro pet?"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sua resposta secreta"
                    android:textColorHint="#80000000"
                    app:boxBackgroundColor="#B3FFFFFF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextRespostaSecreta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@android:color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnVerificarResposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verificar Resposta"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEtapaNovaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite a nova senha"
                    android:textColorHint="#80000000"
                    app:boxBackgroundColor="#B3FFFFFF"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNovaSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSalvarNovaSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar Nova Senha"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonVoltarLogin"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voltar para o Login"
                app:strokeColor="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>