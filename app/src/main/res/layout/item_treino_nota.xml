<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_nota_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_semi_transparent"
    android:padding="16dp"
    android:layout_marginVertical="6dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp">

    <TextView
        android:id="@+id/titulo_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="KM Corridos"/>

    <TextView
        android:id="@+id/conteudo_nota_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="5km em 30 minutos, me senti bem mas com uma leve dor no joelho esquerdo depois..."/>

</LinearLayout>