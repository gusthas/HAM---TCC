<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/chatgpt_image_22_de_abr__de_2025_14_02_10"
    tools:context=".pergunta01">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <LinearLayout
            android:id="@+id/card_pratica_atividade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_semi_transparent"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pratica alguma atividade física regularmente?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupPraticaAtividade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioSimPratica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radioNaoPratica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Não"
                    android:textColor="@color/white" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_tempo_disponivel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_semi_transparent"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_pratica_atividade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quanto tempo tem disponível por dia?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioTempoMenos30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menos de 30 minutos"
                    android:textColor="@color/white"/>
                <RadioButton
                    android:id="@+id/radioTempo30a60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entre 30 e 60 minutos"
                    android:textColor="@color/white"/>
                <RadioButton
                    android:id="@+id/radioTempoMais60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mais de 1 hora"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_espaco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_semi_transparent"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_tempo_disponivel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qual espaço tem disponível para se exercitar?"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkBoxcasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casa"
                android:textColor="@color/white" />
            <CheckBox
                android:id="@+id/checkBox2academia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academia"
                android:textColor="@color/white" />
            <CheckBox
                android:id="@+id/checkBox3parque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parque / Área aberta"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonavancaratividades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/card_espaco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>