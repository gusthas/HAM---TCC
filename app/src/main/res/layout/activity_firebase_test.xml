<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/chatgpt_image_22_de_abr__de_2025_14_02_10"
    tools:context=".FirebaseTestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teste de Conexão Firebase"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/status_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/rounded_semi_transparent"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Status: Desconectado"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_register_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuário de Teste"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_login_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login com Usuário de Teste"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_logout_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

</LinearLayout>