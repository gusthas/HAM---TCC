<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado checked: fundo verde com check pequeno no centro -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4CAF50" /> <!-- Verde -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_habit" android:gravity="center" />
        </layer-list>
    </item>

    <!-- Estado nÃ£o checked: fundo transparente com borda cinza -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#B0BEC5" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>